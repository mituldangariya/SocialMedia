                                    <img src="" id="ProfilePhoto" alt="">
                                    <form id="uploadForm" enctype="multipart/form-data">
                                        <label for="fileInput" class="fileContainer">

                                            <div style="cursor: pointer;">

                                               @* <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="black" stroke="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user" style="border-radius: 50%; cursor: pointer;">
